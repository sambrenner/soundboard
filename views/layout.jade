doctype html
html(lang="en")
  head
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type="text/javascript", src="/javascripts/jquery.2.0.3.min.js")
    script(type="text/javascript", src="/javascripts/soundjs-0.6.1.min.js")
    script(type="text/javascript", src="/javascripts/soundboard.js")
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", aria-expanded="false", data-target="#soundboard-menu")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") Soundboard
        .navbar-collapse.collapse
          form.navbar-form.navbar-left(role="search")
            .form-group
              input.form-control#soundboard-filter(type="text", placeholder="Filter")
    #main.container-fluid
      block content
